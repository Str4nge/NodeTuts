<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs'); %>
<body>
    <%- include('./partials/nav.ejs'); %>

    <div class="details content">
        <h2><%= blog.title %> </h2>
        <div class="content">
            <p><%= blog.body %> </p>
            By -<cite><%= blog.author %> </cite>
            <p>Post Created at: <%= blog.createdAt %> </p>

        </div>
        <a class="delete" data-doc ="<%= blog._id %>"> Delete </a>    <!-- doc is the defined attribute to store custom data -->

        <a class="back" href="/blogs"> Back </a>    
    </div>

    <%- include('./partials/footer.ejs'); %>

    <script>
        //Here we have to generate a delete request using AJAX js when the delete button is clicked
        const icon = document.querySelector('a.delete');

        icon.addEventListener('click', (e) => {
            const endpoint = `/blogs/${icon.dataset.doc}`;

            fetch(endpoint, { method: 'DELETE' })
            .then( (response) => response.json() )
            .then( (data) => window.location.href = data.redirect )
            .catch( (err) => console.log(err));
        });
    </script>

</body>
</html>